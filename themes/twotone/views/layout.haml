!!!
%html{ :lang => "en", "xml:lang" => "en", :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %title= @title
    %link{ :href => "/css/theabstractfactory.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    - if local_stylesheet?
      %link{ :href => "/css/local.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "/articles.xml", :rel => "alternate", :type => "application/atom+xml" }
    = haml :analytics, :layout => false
  %body{ :class => @body_class }
  #header
    #socialicons
      %a{:href => 'http://www.facebook.com/TheAbstractFactory/', :target => 'blank'}
        %img.socialicon{:src => '/attachments/facebook_128x128.png'}
      %a{:href => 'http://twitter.com/#!/TheAbstractFact', :target => 'blank'}
        %img.socialicon{:src => '/attachments/twitter_128x128.png'}
      %a{:href => 'https://github.com/theabstractfactory', :target => 'blank'}
        %img.socialicon{:src => '/attachments/github_108x108.png'}
    #title
      %p.title= @heading
      %p.subtitle= @subtitle
    #container
      = yield
      #footer